
<div id="login_form">

  <h1 id="login_heading">Welcome!</h1>

  <div class="login_input">
    <%= form_tag '/login' do %>
      <p>
        <%= label_tag :username, nil, :class => 'login_title' %><br/>
        <%= text_field_tag :username, nil, :class => 'login_field' %>
      </p>

      <p>
        <%= label_tag :password, nil, :class => 'login_title' %><br/>
        <%= password_field_tag :password, nil, :class => 'login_field' %>
      </p>

      <P>
        <button class="login_button">LOG IN</button>
      </p>
    <%end%>
  </div>

</div>
